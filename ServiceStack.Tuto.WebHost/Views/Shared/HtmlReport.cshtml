<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <!-- Bootstrap -->
    <link href="@Url.Content("~/bootstrap/css/bootstrap.min.css")" rel="stylesheet" media="screen">
    <link href="@Url.Content("~/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" media="screen">
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Pricer Tuto</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><a href="/">Home</a></li>
              <li><a href="/quotes">Quotes</a></li>
              <li><a href="/price">Pricer</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
        <h1>@ViewBag.Title</h1>
        @RenderBody()
    </div>
    <script src="@Url.Content("~/jquery/js/jquery-1.8.3.min.js")"></script>
    <script src="@Url.Content("~/bootstrap/js/bootstrap.min.js")"></script>
    @RenderSection("javascript", required: false)
</body>
</html>
